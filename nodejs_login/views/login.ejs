<br /><br />
<div class="row">
    <div class="col-sm"></div>
    <div class="col-sm-4">
        <% include ./partials/messages %>
        <form action="/user/login" method="POST">
            <fieldset>
                <legend>Login</legend>
                <br />
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp"
                        placeholder="Digite o seu email" name="email">
                    <small id="emailHelp" class="form-text text-muted">Não entregue seu email para desconhecidos.
                    </small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Senha</label>
                    <input type="password" class="form-control" id="password" placeholder="Digite sua senha"
                        name="password">
                    <small id="emailHelp" class="form-text text-muted">Não entregue sua senha para estranhos.</small>
                </div>
                <p class="text-muted">Não tem cadastro?<a href="/user/register"> Registre-se aqui</a>!</p>
                <br />
                <br />
                <button type="submit" class="btn btn-outline-primary">Entrar</button>
            </fieldset>
        </form>
    </div>
    <div class="col-sm"></div>
</div>